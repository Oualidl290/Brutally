# Video Processing Platform Environment Configuration

# Application Settings
APP_NAME="Enterprise Video Processing Platform"
APP_VERSION="1.0.0"
ENVIRONMENT="development"  # development, staging, production
DEBUG=true
SECRET_KEY="your-secret-key-change-in-production"

# API Configuration
API_HOST="0.0.0.0"
API_PORT=8000
API_PREFIX="/api/v1"
API_DOCS_URL="/docs"
API_REDOC_URL="/redoc"

# Database Configuration (Production-Ready)
DATABASE_URL="postgresql://video_admin:VerySecurePassword123!@localhost:6432/video_processing_prod"
DATABASE_POOL_SIZE=25
DATABASE_MAX_OVERFLOW=50
DATABASE_POOL_TIMEOUT=30
DATABASE_POOL_RECYCLE=3600

# Redis Configuration (Production-Ready)
REDIS_URL="redis://localhost:6379/0"
REDIS_MAX_CONNECTIONS=100
REDIS_RETRY_ON_TIMEOUT=true
REDIS_SOCKET_KEEPALIVE=true
REDIS_SOCKET_KEEPALIVE_OPTIONS={}

# Storage Configuration
STORAGE_BACKEND="local"  # local, s3, minio
TEMP_DIR="./temp"
OUTPUT_DIR="./output"
CACHE_DIR="./cache"
LOG_DIR="./logs"

# AWS S3 Configuration (if using S3)
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_REGION="us-east-1"
S3_BUCKET_NAME=""

# MinIO Configuration (if using MinIO)
MINIO_ENDPOINT=""
MINIO_ACCESS_KEY=""
MINIO_SECRET_KEY=""
MINIO_BUCKET_NAME=""

# Processing Configuration
ENABLE_GPU=false
MAX_CONCURRENT_JOBS=10
MAX_CONCURRENT_DOWNLOADS=5
DEFAULT_VIDEO_QUALITY="1080p"
DEFAULT_VIDEO_CODEC="h264"

# Celery Configuration
CELERY_BROKER_URL="redis://localhost:6379/0"
CELERY_RESULT_BACKEND="redis://localhost:6379/0"
CELERY_TASK_SERIALIZER="json"
CELERY_RESULT_SERIALIZER="json"

# Logging Configuration
LOG_LEVEL="INFO"  # DEBUG, INFO, WARNING, ERROR
LOG_FILE="./logs/app.log"
LOG_FORMAT="json"  # json, text

# Security Configuration
ALLOWED_HOSTS=["localhost", "127.0.0.1"]
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]
JWT_ALGORITHM="HS256"
JWT_EXPIRE_MINUTES=30
JWT_REFRESH_EXPIRE_DAYS=7

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=100

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9090
ENABLE_HEALTH_CHECKS=true

# Production Database Passwords (Auto-generated by setup script)
POSTGRES_PASSWORD="VerySecurePassword123!"
PGADMIN_PASSWORD="AdminPassword123!"
REDIS_ADMIN_PASSWORD="AdminPassword123!"

# Docker Configuration
POSTGRES_DB="video_processing_prod"
POSTGRES_USER="video_admin"
FLOWER_USER="admin"
FLOWER_PASSWORD="admin"

# Development Settings
RELOAD_ON_CHANGE=true
ENABLE_DEBUG_TOOLBAR=true